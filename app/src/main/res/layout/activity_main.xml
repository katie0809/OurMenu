<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kyungimlee.ourmenu.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="489dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="monospace"
            android:text="모두의 메뉴"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="102dp"
            android:textAlignment="center"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="285dp">

            <Button
                android:id="@+id/camera_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/saved_btn"
                android:layout_marginBottom="11dp"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@+id/gallary_btn"
                android:text="Camera"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="185dp" />

            <Button
                android:id="@+id/setting_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="89dp"
                android:layout_marginStart="91dp"
                android:text="Setting"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="185dp" />

            <Button
                android:id="@+id/gallary_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/camera_btn"
                android:layout_alignBottom="@+id/camera_btn"
                android:layout_alignStart="@+id/setting_btn"
                android:text="Gallary"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="256dp" />

            <Button
                android:id="@+id/saved_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/setting_btn"
                android:layout_alignBottom="@+id/setting_btn"
                android:layout_alignEnd="@+id/camera_btn"
                android:text="Saved Menu"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="256dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lang_list"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp"
            android:text="Choose language to translate"
            android:textAlignment="center"/>

        <Spinner
            android:id="@+id/lang_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/camera_btn"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
